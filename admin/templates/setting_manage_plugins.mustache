{{!
    @template core_admin/setting_manage_plugins

    Admin plugin management template.

    Context variables required for this template:
    * plugins

    Example context (json):
    {
        "infocolumnname": "Food",
        "plugins": [
            {
                "enabled": true,
                "plugin": "Forum",
                "info": "Lettuce",
                "movedownlink": "#",
                "toggletarget": false,
                "togglelink": "#",
                "settingslink": "#",
                "uninstalllink": "#"
            },
            {
                "enabled": false,
                "plugin": "Database",
                "info": "Cheese",
                "moveuplink": "#",
                "toggletarget": true,
                "togglelink": "#",
                "settingslink": "#",
                "uninstalllink": "#"
            }
        ]
    }
}}
<table class="admintable generaltable">
    <thead>
        <tr>
            <th class="header">{{#str}}name, powereduc{{/str}}</th>
            {{#infocolumnname}}
            <th class="header">{{infocolumnname}}</th>
            {{/infocolumnname}}
            <th class="header">{{#str}}order, powereduc{{/str}}</th>
            <th class="header">{{#str}}isenabled, plugin{{/str}}</th>
            <th class="header">{{#str}}settings, powereduc{{/str}}</th>
            <th class="header">{{#str}}uninstall, plugin{{/str}}</th>
        </tr>
    </thead>
    <tbody>
        {{#plugins}}
        <tr {{^enabled}}class="dimmed_text"{{/enabled}}>
            <td>{{plugin}}</td>
            {{#infocolumnname}}
            <td>
                {{info}}
            </td>
            {{/infocolumnname}}
            <td class="text-nowrap">
                {{#moveuplink}}
                    <a href="{{{moveuplink}}}">
                        {{#pix}}t/up, powereduc, {{#str}} up, powereduc {{/str}}{{/pix}}
                    </a>
                {{/moveuplink}}
                {{^moveuplink}}
                    {{#pix}}spacer, powereduc{{/pix}}
                {{/moveuplink}}

                {{#movedownlink}}
                    <a href="{{{movedownlink}}}">
                        {{#pix}}t/down, powereduc, {{#str}} down, powereduc {{/str}}{{/pix}}
                    </a>
                {{/movedownlink}}
                {{^movedownlink}}
                    {{#pix}}spacer, powereduc{{/pix}}
                {{/movedownlink}}
            </td>
            <td>
                <a href="{{{togglelink}}}">
                    {{#toggletarget}}
                    {{#pix}}i/show, powereduc, {{#str}} enable, powereduc {{/str}}{{/pix}}
                    {{/toggletarget}}
                    {{^toggletarget}}
                    {{#pix}}i/hide, powereduc, {{#str}} disable, powereduc {{/str}}{{/pix}}
                    {{/toggletarget}}
                </a>
            </td>
            <td>
                {{#settingslink}}
                    <a href="{{{settingslink}}}">{{#str}}settings,plugin{{/str}}</a>
                {{/settingslink}}
            </td>
            <td>
                {{#uninstalllink}}
                    <a href="{{{uninstalllink}}}">{{#str}}uninstall,plugin{{/str}}</a>
                {{/uninstalllink}}
            </td>
        </tr>
        {{/plugins}}
    </tbody>
</table>
