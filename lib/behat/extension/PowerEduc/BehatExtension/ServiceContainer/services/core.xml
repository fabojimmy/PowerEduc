<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="behat.powereduc.parameters"></parameter>
        <parameter key="powereduc.context.initializer.class">PowerEduc\BehatExtension\Context\Initializer\PowerEducAwareInitializer</parameter>
        <parameter key="powereduc.context.contextclass.classresolver.class">PowerEduc\BehatExtension\Context\ContextClass\ClassResolver</parameter>
        <parameter key="behat.mink.selector.handler.class">Behat\Mink\Selector\SelectorsHandler</parameter>
    </parameters>

    <services>
        <!-- PowerEduc context initializer -->
        <service id="powereduc.context.initializer" class="%powereduc.context.initializer.class%">
            <argument>%behat.powereduc.parameters%</argument>
            <tag name="context.initializer" />
        </service>

        <!-- PowerEduc class resolver for behat context -->
        <service id="powereduc.context.contextclass.classresolver" class="%powereduc.context.contextclass.classresolver.class%">
            <argument>%behat.powereduc.parameters%</argument>
            <tag name="context.class_resolver" />
        </service>
    </services>
</container>
